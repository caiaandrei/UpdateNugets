<Window x:Class="UpdateNugets.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpdateNugets.UI.View"
        xmlns:helpers="clr-namespace:UpdateNugets.UI.Helpers"
        mc:Ignorable="d"
        Title="Update NuGets" 
        WindowState="Maximized"
        Loaded="Window_Loaded">
    <Window.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <DockPanel Margin="5" Grid.ColumnSpan="2">
            <Button Content="Change Path" 
                    DockPanel.Dock="Right"
                    Margin="2" 
                    Command="{Binding ChangePathCommand}"
                    CommandParameter="{Binding}"/>

            <TextBox Text="{Binding ProjectPath}" 
                     Margin="2"
                     IsReadOnly="True"/>

        </DockPanel>
        
        <local:NuGetsListView x:Name="NuGetsListView" 
                              Grid.Row="1"
                              Grid.RowSpan="3"
                              Margin="5"
                              DataContext="{Binding NuGetsListViewModel}"/>

        <Grid Grid.Column="1"
              Grid.Row="1"
              Margin="5"
              Visibility="{Binding HasSelectedNuGet, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay}">
            <local:SelectedNuGetDetailsView DataContext="{Binding SelectedNuGetDetailsViewModel}" />
        </Grid>

        <Grid Grid.Column="1"
              Grid.Row="2"
              Grid.RowSpan="2"
              Margin="5"
              Visibility="{Binding HasSelectedNuGet, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay}">
            <local:SelectedNuGetVersionFilesView DataContext="{Binding SelectedNuGetVersionFilesViewModel}"/>
        </Grid>

        <Button Content="Generate Raport"
                Grid.Column="1"
                Grid.Row="5" 
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="5 5 5 10"
                Command="{Binding GenerateRaportCommand}"
                CommandParameter="{Binding}"/>
    </Grid>
</Window>
